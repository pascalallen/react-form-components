{
  "compilerOptions": {
    "module": "ES2020",
    "moduleResolution": "node",
    "baseUrl": "./src/",
    "paths": {
      "@/*": ["*"]
    },
    "target": "es5",
    "outDir": "./build/",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "pretty": true
  }
}
